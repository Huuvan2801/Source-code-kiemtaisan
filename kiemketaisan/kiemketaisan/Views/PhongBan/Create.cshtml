@model kiemketaisan.Models.PhongBan

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h2>Thêm mới phòng ban</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Thông tin phòng ban</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="control-label col-md-2">Tên phòng ban</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenPhongBan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenPhongBan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-1">
                        <input type="submit" value="Thêm mới" class="btn btn-success" />
                    </div>
                    <div class="col-md-2">
                        <a href="@Url.Action("Index","PhongBan")" style="margin-left:10px" class="btn btn-primary">Trở lại</a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
